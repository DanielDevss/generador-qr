---
import ButtonDownload from "@components/forms/ButtonDownload.astro";
import TitleDownloadSection from "@components/ui/TitleDownloadSection.astro";
import Image from "@icons/Image.astro";
import Vector from "@icons/Vector.astro";
---

<article class="md:p-5">
  <img
    id="displayPreview"
    src="qrcodeexample.png"
    alt="Imagen del QR"
    class="aspect-square border-gray-300 w-full md:w-1/2"
  />

  <header class="mt-5">
    <h2 class="font-bold text-gray-50 text-lg">Opciones de descarga</h2>
    <p>Descarga el CÃ³digo QR en el formato que desees.</p>
  </header>
  <div class="mt-3 flex flex-col gap-5">
    <section>
      <TitleDownloadSection><Vector /> Descargar como vector</TitleDownloadSection>
      <div class="flex flex-wrap gap-2">
        <ButtonDownload id="downloadSVG" data-name="svg">Descargar SVG</ButtonDownload>
      </div>
    </section>
    <section>
      <TitleDownloadSection><Image /> Descargar como Imagen</TitleDownloadSection>
      <div class="flex flex-wrap gap-2">
        <ButtonDownload id="downloadPNG" data-name="png">
          Descargar PNG
        </ButtonDownload>
        <ButtonDownload id="downloadJPG" data-name="jpg">
          Descargar JPG
        </ButtonDownload>
        <ButtonDownload id="downloadWEBP" data-name="webp">
          Descargar WEBP
        </ButtonDownload>
      </div>
    </section>
  </div>
</article>
